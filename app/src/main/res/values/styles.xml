<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <!-- Style for Logo -->
    <style name="LogoImage">
        <item name="android:paddingTop">@dimen/activity_vertical_margin</item>
        <item name="android:paddingBottom">@dimen/activity_vertical_margin</item>
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:src">@drawable/singlescreenapplogo</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <!-- Style for Banner -->
    <style name="BannerImage">
        <item name="android:src">@drawable/singlescreenappbanner</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <!-- Style for Product Boxes -->
    <style name="ItemBox">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_width">@dimen/dimen_0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingTop">@dimen/dimen_10dp</item>
        <item name="android:textSize">@dimen/textsize_medium</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>

    <style name="ItemBoxOdd" parent="ItemBox">
        <item name="android:background">@color/colorLightBrown</item>
    </style>

    <style name="ItemBoxEven" parent="ItemBox">
        <item name="android:background">@color/colorPrimaryDark</item>
    </style>

    <style name="ItemBoxOddPrice" parent="ItemBox">
        <item name="android:background">@color/colorLightBrown</item>
        <item name="android:textSize">@dimen/textsize_small</item>
        <item name="android:paddingBottom">@dimen/dimen_10dp</item>
    </style>

    <style name="ItemBoxEvenPrice" parent="ItemBox">
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:textSize">@dimen/textsize_small</item>
        <item name="android:paddingBottom">@dimen/dimen_10dp</item>
    </style>

    <!-- Style for Product Icons -->
    <style name="ItemIcon">
        <item name="android:layout_height">@dimen/height_product_icon</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:layout_width">@dimen/dimen_0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingTop">@dimen/dimen_10dp</item>
    </style>

    <!-- Style for Social Media Icons -->
    <style name="IconSocialMedia">
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:layout_height">@dimen/height_media_icon</item>
        <item name="android:layout_width">@dimen/dimen_0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <!-- Style for Business Contact Rows -->
    <style name="ButtonMenu">
        <item name="android:layout_marginTop">@dimen/activity_vertical_margin</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:paddingLeft">@dimen/dimen_20dp</item>
        <item name="android:paddingRight">@dimen/dimen_20dp</item>
    </style>

    <style name="RowContact">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/colorLatte</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:paddingTop">@dimen/dimen_10dp</item>
    </style>

    <style name="RowContactFirst" parent="RowContact">
        <item name="android:textSize">@dimen/textsize_large</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_below">@id/button_menu</item>
        <item name="android:paddingTop">@dimen/dimen_20dp</item>
    </style>

    <style name="RowContactSecond" parent="RowContact">
        <item name="android:textSize">@dimen/textsize_medium</item>
        <item name="android:layout_below">@id/text_contact_first</item>
    </style>

    <style name="RowContactThird" parent="RowContact">
        <item name="android:textSize">@dimen/textsize_medium</item>
        <item name="android:layout_below">@id/text_contact_second</item>
    </style>

    <style name="RowContactFourth" parent="RowContact">
        <item name="android:textSize">@dimen/textsize_small</item>
        <item name="android:layout_below">@id/text_contact_third</item>
        <item name="android:paddingBottom">@dimen/dimen_20dp</item>
    </style>

    <!-- Style for popup menu window -->
    <style name="AppTheme.CustomTheme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
    </style>

    <!-- Style for Pop-up window -->
    <style name="MenuHeader">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/textsize_medium</item>
        <item name="android:layout_marginTop">@dimen/dimen_24dp</item>
        <item name="android:layout_marginBottom">@dimen/dimen_24dp</item>
    </style>

    <style name="MenuItem">
        <item name="android:layout_width">@dimen/dimen_0dp</item>
        <item name="android:layout_weight">2</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/textsize_small</item>
        <item name="android:layout_marginBottom">@dimen/dimen_5dp</item>
    </style>

    <style name="MenuItemPrice" parent="MenuItem">
        <item name="android:textAlignment">textEnd</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="MenuFiller" parent="MenuItem">
        <item name="android:text">@string/filler_dots</item>
        <item name="android:layout_weight">1</item>
    </style>
</resources>
